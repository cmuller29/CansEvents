@page "/event/{eventId}/atelier"
@using CansInnov.Application.Features.Ateliers.Dtos;

<PageTitle>Ateliers</PageTitle>

<RadzenScheduler TItem="AtelierDto" Data="@Ateliers" StartProperty="DateDebut"
                 EndProperty="DateFin" TextProperty="Titre" SelectedIndex="1"
                 AppointmentSelect=@OnAppointmentSelect>
    <Template Context="data">
        <strong>@data.Titre</strong>
    </Template>
    <ChildContent>
        <RadzenDayView />
        <RadzenWeekView />
        <RadzenMonthView />
        <RadzenYearView />
    </ChildContent>
</RadzenScheduler>